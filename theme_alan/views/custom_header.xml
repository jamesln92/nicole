                <span>Sign in</span>
            </span>
            <a t-else='' class="h-link nav-link" t-attf-href="/web/login">
                <i class="lnr lnr-user"></i>
                <span>Sign in</span>
            </a>
        </div>
        <div class="h-col h-user h-user-login dropdown" t-ignore="true" t-if="not user_id._is_public()">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                <i class="lnr lnr-user"></i>
                <span>Account</span>
            </a>
            <div class="dropdown-menu" role="menu">
                <span t-esc="user_id.name[:23] + '...' if user_id.name and len(user_id.name) &gt; 25 else user_id.name"/>
                <a href="/my/home" role="menuitem" class="dropdown-item">My Account</a>
                <a id="o_logout" class="dropdown-item" t-attf-href="/web/session/logout?redirect=/" role="menuitem">Logout</a>
            </div>
        </div>
    </template>

    <!-- Header Add to Cart -->
    <template id="theme_header_cart">
        <t t-set="website_sale_order" t-value="website.sale_get_order()" />
        <div id="my_cart" class="h-col h-cart">
            <t t-if="request.website.viewref('atharva_theme_base.cart_lines_popup_content').active">
                <div class="o_wsale_my_cart nav-link my_cart_btn">
                    <i class="lnr lnr-cart"></i>
                    <span>My Cart</span>  <sup t-attf-class="my_cart_quantity badge badge-primary" t-esc="website_sale_order and website_sale_order.cart_quantity or ''" />
                </div>
            </t>
            <t t-else="">
                <a href="/shop/cart" class="o_wsale_my_cart nav-link">
                    <i class="lnr lnr-cart"></i>
                    <span>My Cart</span>  <sup t-attf-class="my_cart_quantity badge badge-primary" t-esc="website_sale_order and website_sale_order.cart_quantity or ''" />
                </a>
            </t>
        </div>
    </template>

    <!-- Header Wishlist -->
    <template id="theme_header_wishlist">
        <t t-if="request.website.viewref('website_sale_wishlist.add_to_wishlist').active">
            <t t-set='wishcount' t-value="len(request.env['product.wishlist'].current())"/>
            <div class="o_wsale_my_wish h-col h-wishlist">
                <a href="/shop/wishlist" class="nav-link">
                    <i class="lnr lnr-heart"/>
                    <span>Wishlist</span> <sup t-attf-class="my_wish_quantity o_animate_blink badge badge-primary"><t t-esc='wishcount'/></sup>
                </a>
            </div>
        </t>
    </template>

    <!-- Header logo -->
    <template id="theme_header_logo">
        <t t-if="request.website.viewref('website.option_header_brand_logo').active">
            <a href="/">
                <span t-field="website.logo" t-options="{'widget': 'image'}" t-att-alt="'Logo of %s' % website.name" t-att-title="website.name" />
            </a>
        </t>
        <t t-else="">
            <a class="te_header_before_logo navbar-brand" href="/" t-if="website"
                t-field="website.name">My Website
            </a>
        </t>
    </template>

    <!-- Header Sub manu-->
    <template id="submanu_navs" name="custom sub manu">
        <nav data-name="Navbar" class="navbar navbar-expand-lg navbar-light o_colored_level o_cc shadow-sm as-header-navbar">
            <div id="top_menu_container" class="container justify-content-start justify-content-lg-between">
                <!-- Navbar Toggler -->
                <t t-call="website.navbar_toggler">
                    <t t-set="_toggler_class" t-value="'ml-auto'"/>
                </t>
                <!-- Navbar Collapse -->
                <div id="top_menu_collapse" class="collapse navbar-collapse order-last order-lg-0">
                    <t t-call="website.navbar_nav">
                        <t t-set="_nav_class" t-value="'flex-grow-1'"/>
                        <!-- Menu -->
                        <t t-foreach="website.menu_id.child_id" t-as="submenu">
                            <t t-call="website.submenu">
                                <t t-set="item_class" t-value="'nav-item'"/>
                                <t t-set="link_class" t-value="'nav-link'"/>
                            </t>
                        </t>
                    </t>
                </div>
            </div>
        </nav>
    </template>


    <!-- Set value for not adding category dropdownlist in blog searching-->
    <template id="blogs_nav_extends" name="Blogs Bar Template Extend As" inherit_id="website_blog.blogs_nav">
        <xpath expr="//form[@id='o_wblog_post_search']/t" position="inside">
            <t t-set="no_cat_listing" t-value="True"/>
        </xpath>
    </template>
    <!-- Set value for not adding category dropdownlist in Search Snippet-->
    <template id="search_snippet_extends" name="Search Snippet Extend As" inherit_id="website_sale.s_products_searchbar">
        <xpath expr="//div[hasclass('row')]" position="before">
            <t t-set="no_cat_listing" t-value="True"/>
        </xpath>
    </template>
    <!-- Advance Searching  -->
    <template id="advance_searching" name="Advanced Search" inherit_id="website.website_search_box">
        <xpath expr="//input[@name='search']" position="before">
            <t t-if="not no_cat_listing">
            <t t-set="action" t-value="shop" />
                <div class="nav-search-scope dropdown">
                    <input t-if="is_subcatetgory" type="hidden" id="selectedCat" name="category" t-att-value="is_subcatetgory.id"/>
                    <input t-elif="category" type="hidden" id="selectedCat" name="category" t-att-value="category.id"/>
                    <input t-else="" type="hidden" id="selectedCat" name="category"/>
                    <button class="btn dropdown-toggle" type="button" id="dropdownCatMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <t t-if="is_subcatetgory" t-esc="is_subcatetgory.name"/>
                        <t t-elif="category" t-esc="category.name"/>
                        <t t-else="">All</t>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownCatMenuButton" x-placement="bottom-start">
                        <t t-if="category">
                            <label t-if="len(category.parent_id) != 0" class="dropdown-item text-primary selected-cat" type='button' t-att-data-id="category.id"><t t-esc="category.name"/></label>
                        </t>
                        <label t-attf-class="dropdown-item #{'text-primary' if not category and not is_subcatetgory else ''} selected-cat" type='button' t-att-data-id="0">All</label>
                        <t t-foreach="request.env['product.public.category'].get_all_parent_category()" t-as="cat">
                            <label t-if="category" t-attf-class="dropdown-item #{'text-primary' if category.id == cat.id else ''} selected-cat" type='button' t-att-data-id="cat.id"><t t-esc="cat.name"/></label>
                            <label t-else='' class="dropdown-item selected-cat" type='button' t-att-data-id="cat.id"><t t-esc="cat.name"/></label>
                        </t>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
